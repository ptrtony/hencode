<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".customerview.CustomeViewActivity">

    <Button
            android:id="@+id/btn_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000000"
            android:text="绘制圆"
    android:layout_marginTop="100dp"
        android:onClick="onDrawCircle"/>

    <Button
            android:id="@+id/btn_dash_board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="绘制仪表盘"
    android:onClick="onDashBoardClick"/>

    <Button
            android:id="@+id/btn_cake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="绘制圆饼"/>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
    android:text="xformat"
    android:textAllCaps="false"
    android:onClick="onAvatorClick"/>

</LinearLayout>